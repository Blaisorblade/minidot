tpe: type.

int: tpe.
bool: tpe.

tenv: type.

tnil  : tenv.
tcons : tpe -> tenv -> tenv.


topt: type.
tsome: tpe -> topt.
tnone: topt.

tlookup : tenv -> topt -> type.
tl/fail : tlookup tnil tnone.
tl/hit  : tlookup (tcons V1 G) (tsome V1).


%mode tlookup +G -T.
%worlds () (tlookup _ _).
%total (A) (tlookup A _).
%unique tlookup +G -1T.

lookup-restrict: tlookup G2 T2 -> tlookup G1 T1 -> tlookup G2 T1 -> tlookup G1 T2 -> type.
%mode lookup-restrict +A +B -D -E.

-: lookup-restrict L2 L1 L2 L1.

%worlds () (lookup-restrict _ _ _ _).
%total (A) (lookup-restrict _ A _ _).


G1 = (tcons int tnil).
G2 = (tcons bool tnil).

%query 1 * (tlookup G1 (tsome int)).
%query 1 * (tlookup G2 (tsome bool)).
%query 0 * (tlookup G1 (tsome bool)).
%query 0 * (tlookup G2 (tsome int)).
